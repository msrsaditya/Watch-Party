rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isHost() {
      return request.auth.uid == resource.data.host;
    }
    match /artifacts/{appId}/public/data/rooms/{roomId} {
      allow read: if true;
      allow update: if 
        (
         request.resource.data.participants.diff(resource.data.participants).affectedKeys().hasOnly([request.auth.uid])
        ) 
        ||
        (
          isHost()
        );
      allow create: if request.auth != null;
      match /messages/{msgId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete: if get(/databases/$(database)/documents/artifacts/$(appId)/public/data/rooms/$(roomId)).data.host == request.auth.uid;
      }
      match /commands/{cmdId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
      match /typing/{userId} {
        allow read: if true;
        allow write: if request.auth.uid == userId;
      }
    }
  }
}
